@model CrossChat.Data.Entities.User

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Личный кабинет</title>
    <!-- ИСПРАВЛЕНИЕ ЗДЕСЬ: Добавил веса 700 и 800 -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-color: #050505;
            --glass-bg: rgba(255, 255, 255, 0.05);
            --glass-border: rgba(255, 255, 255, 0.1);
            --text-main: #ffffff;
            --text-secondary: #a1a1aa;
        }

        /* ВАЖНО: Это правило чинит вылезание за границы */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-main);
            overflow-x: hidden;
        }

        /* NAVBAR */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 1.5rem;
            background: rgba(5, 5, 5, 0.9);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--glass-border);
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }

        .logo-img {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            object-fit: cover;
        }

        .logo-text {
            font-weight: 700;
            color: white;
            font-size: 1.1rem;
        }

        .user-menu {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-email {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        @@media(max - width: 600px)

        {
            .user-email

        {
            display: none;
        }

        }

        .logout-btn {
            background: transparent;
            border: 1px solid var(--glass-border);
            color: white;
            padding: 6px 12px;
            border-radius: 8px;
            cursor: pointer;
        }

        .container {
            max-width: 600px;
            margin: 6rem auto 2rem;
            padding: 0 1rem;
        }

        .card {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        /* КНОПКА INSTAGRAM */
        .btn-instagram {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            width: 100%;
            padding: 12px;
            background: #262626;
            border: 1px solid #404040;
            border-radius: 8px;
            color: white;
            text-decoration: none;
            font-weight: 600;
            margin-top: 1rem;
            transition: background 0.2s;
        }

            .btn-instagram:hover {
                background: #333;
            }

        /* СТАТУСЫ */
        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .status-disconnected {
            background: rgba(255,255,255,0.1);
            color: #888;
        }

        .status-active {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }

        .status-paused {
            background: rgba(234, 179, 8, 0.2);
            color: #fbbf24;
            border: 1px solid rgba(234, 179, 8, 0.3);
        }

        .dot {
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background-color: currentColor;
        }

        .status-active .dot {
            animation: pulse 2s infinite;
        }
        @@keyframes pulse {
            0%

        {
            opacity: 1;
        }

        50% {
            opacity: 0.4;
        }

        100% {
            opacity: 1;
        }

        }

        /* ИКОНКИ СЕРВИСОВ */
        .service-icon {
            width: 38px;
            height: 38px;
            border-radius: 10px; /* Скругленный квадрат */
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            margin-right: 12px;
        }

            .service-icon svg {
                width: 22px;
                height: 22px;
                fill: white;
            }

        /* Стиль для Instagram */
        .icon-insta {
            background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
            box-shadow: 0 4px 12px rgba(220, 39, 67, 0.3); /* Цветная тень для объема */
        }

        /* (На будущее) Стиль для Telegram */
        .icon-tg {
            background: linear-gradient(135deg, #2AABEE 0%, #229ED9 100%);
            box-shadow: 0 4px 12px rgba(34, 158, 217, 0.3);
        }
    </style>
</head>
<body>

    <nav class="navbar">
        <a href="/" class="logo-container">
            <img src="/images/CrossChatLogo.jpeg" alt="Logo" class="logo-img">
            <span class="logo-text">CrossChat</span>
        </a>
        <div class="user-menu">
            @* <span class="user-email">@Model.Email</span> *@
            <form action="/auth/logout" method="post" style="margin:0">
                <button class="logout-btn">Выйти</button>
            </form>
        </div>
    </nav>

    <div class="container">
        <!-- Карточка Приветствия -->
        <div class="card" style="display:flex; align-items:center; gap:15px;">
            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
            {
                <img src="@Model.AvatarUrl" style="width:50px; height:50px; border-radius:50%;" alt="Avatar">
            }
            else
            {
                <div style="width:50px; height:50px; border-radius:50%; background:#333; display:flex; align-items:center; justify-content:center;">
                    @Model.Name.Substring(0, 1)
                </div>
            }
            <div>
                <h2 style="margin:0; font-size:1.2rem;">Привет, @Model.Name!</h2>
                @* <span style="color:var(--text-secondary); font-size:0.9rem;">ID: #@Model.Id</span> *@
            </div>
        </div>

        <!-- Карточка Instagram -->
        <div class="card">
            <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:1rem;">

                <!-- ЛЕВАЯ ЧАСТЬ: ИКОНКА + ЗАГОЛОВОК -->
                <div style="display:flex; align-items:center;">
                    <div class="service-icon icon-insta">
                        <svg viewBox="0 0 24 24">
                            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                        </svg>
                    </div>
                    <h3 style="margin:0; font-size:1.2rem;">Instagram</h3>
                </div>

                <!-- ПРАВАЯ ЧАСТЬ: СТАТУС -->
                @if (Model.InstagramSettings != null && !string.IsNullOrEmpty(Model.InstagramSettings.AccessToken))
                {
                    if (Model.InstagramSettings.IsActive)
                    {
                        <span class="status-badge status-active"><span class="dot"></span>Активен</span>
                    }
                    else
                    {

                        <span class="status-badge status-paused"><span class="dot"></span>На паузе</span>
                    }
                }
                else
                {

                    <span class="status-badge status-disconnected">Не подключено</span>
                }
            </div>

            @if (Model.InstagramSettings != null && !string.IsNullOrEmpty(Model.InstagramSettings.AccessToken))
            {
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom:1rem;">
                    @if (!string.IsNullOrEmpty(Model.InstagramSettings.ProfilePictureUrl))
                    {
                        <img src="@Model.InstagramSettings.ProfilePictureUrl" style="width: 48px; height: 48px; border-radius: 50%; border:2px solid #333;">
                    }
                    <div>
                        <div style="font-weight:600;">@Model.InstagramSettings.Username</div>
                        <div style="font-size:0.85rem; margin-top:2px;">
                            @if (Model.InstagramSettings.IsActive)
                            {
                                <span style="color:#10b981;">● Бот отвечает на сообщения</span>
                            }
                            else
                            {

                                <span style="color:#fbbf24;">⚠️ Бот выключен</span>
                            }
                        </div>
                    </div>
                </div>

                <a href="/instagram" class="btn-instagram">
                    ⚙️ Настроить и @(Model.InstagramSettings.IsActive ? "Выключить" : "Включить")
                </a>
            }
            else
            {
                <p style="color:#aaa; font-size:0.9rem; margin-bottom:0;">Подключите аккаунт, чтобы настроить автоответы.</p>
                <a href="/instagram" class="btn-instagram">
                    + Подключить Instagram
                </a>
            }
        </div>
    </div>

</body>
</html>